<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.project.library.mapper.CategoryMapper">
    <sql id="postColumns">
        id
        , name
        , createdAt
        , modifiedAt
    </sql>
    <!-- request Body 요청 데이터를 DB에 저장-->
    <insert id="saveCategory" parameterType="com.project.library.dto.request.CategoryPostRequestDto">
        INSERT INTO category (
        <include refid="postColumns"></include>
        ) VALUES (
        #{id}
        ,#{name}
        ,now()
        ,null
        )

    </insert>

    <update id="updateCategory" parameterType="com.project.library.dto.request.CategoryPostRequestDto">
        UPDATE category
        SET
            id = #{id},
            name = #{name},
            modifiedAt = now()
        WHERE id=#{id}
    </update>

    <select id="findByName" parameterType="String" resultType="com.project.library.dto.response.CategoryResponseDto">
        SELECT * FROM category where name=#{name};
    </select>

    <select id="findById" parameterType="Long" resultType="com.project.library.dto.response.CategoryResponseDto">
        SELECT * FROM category where id=#{id};
    </select>

    <select id="findAll" resultType="com.project.library.dto.response.CategoryResponseDto">
        SELECT id, name, createdAt, modifiedAt
        FROM category DESC;
    </select>

    <update id="deleteCategory" parameterType="com.project.library.dto.request.CategoryPostRequestDto">
        UPDATE category
        SET
            deleteStatus = 'N',
            modifiedAt = now()
        WHERE id = #{id}
    </update>
</mapper>