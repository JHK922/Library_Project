<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.project.library.mapper.LoginMapper">

    <!-- id는 @Mapper에서 정의한 이름과 동일해야 함 parameterType은 참고 할 자료를 넣음-->

    <!-- 로그인 -->
    <select id="loginMember" parameterType="String" resultType="com.project.library.dto.response.LoginResponse">
        SELECT
            email, password1
        FROM
            member
        WHERE
            email = #{email} AND password1 = #{password1}
    </select>

</mapper>

