<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.project.library.mapper.NoticeMapper">

    <!-- 테이블 전체 컬럼 -->
    <sql id="noticeAll">
        id, title, content, createdAt, modifiedAt, deleteYN, memberId
    </sql>

    <!-- id는 @Mapper에서 정의한 이름과 동일해야 함 parameterType은 참고 할 자료를 넣음-->

    <!-- 게시글 저장 -->
    <insert id="saveNotice" parameterType="com.project.library.dto.request.NoticeRequest"
            useGeneratedKeys="true" keyProperty="id">
        INSERT INTO notice (
            id, title, content, createdAt, deleteYN, memberId
        ) VALUES (
            #{id},
            #{title},
            #{content},
            NOW(),
            false,
            #{memberId}
        );
    </insert>

    <!-- 게시글 지정 조회 -->
    <select id="findById" parameterType="long" resultType="com.project.library.dto.response.NoticeResponse">
        SELECT
            <include refid="noticeAll" />
        FROM
            notice
        WHERE
            id = #{id}
    </select>

    <!-- 게시글 지정 조회 -->
    <select id="findByMemberId" parameterType="long" resultType="com.project.library.dto.response.NoticeResponse">
        SELECT
            <include refid="noticeAll" />
        FROM
            notice
        WHERE
            memberId = #{memberId}
    </select>

    <!-- 게시글 전체 조회 -->
    <select id="findAll" resultType="com.project.library.dto.response.NoticeResponse">
        SELECT *
        FROM
            notice
    </select>

    <!-- 게시글 수정 -->
    <update id="updateNotice" parameterType="com.project.library.dto.request.NoticeRequest">
        UPDATE
            notice
        SET
            title = #{title},
            content = #{content},
            modifiedAt = NOW()
        WHERE
            id = #{id}
    </update>

    <!-- 게시글 삭제 -->
    <delete id="deleteById" parameterType="long">
        UPDATE
            notice
        SET
            deleteYN = true
        WHERE
            id = #{id}
    </delete>
</mapper>